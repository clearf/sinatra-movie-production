<h1>Edit Task</h1>
<form action="/tasks/<%= @task_id %>" method="post">
  <input type="text" value="<%= @task_details['name'] %>"name="name"><br/>
  <input type="text" value="<%= @task_details['description'] %>" name="due"><br/>
    <select name="movie_id">
      <% @movie_details.each do |movie| %>
      <option selected="<%=movie['name'] %>" value="<%= movie['id'] %>">
        <%= movie['name'] %>
        <% end %>
      </option>
    </select><br/>
    <select name="person_id">
      <% @people.each do |person| %>
      <option value="<%= person['id'] %>">
        <%= person['name'] %>
        <% end %>
      </option>
    </select><br/>
  <button>Edit Task</button>
</form>

<p><a class="buttons" href="/tasks">Tasks</a></p>
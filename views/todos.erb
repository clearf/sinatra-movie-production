<div class="wrapper well">
<div class="row-fluid ">
  <div class="span3">Errand</div>
  <div class="span6">Details</div>
  <div class="span3"></div>
</div>

<% @tasks.each do |task| %>
  <div class="row-fluid">
    <div class="span3"><%= task['errand'] %></div>
    <div class="span5"><%= task['description'] %></div>
    <div class="span2"><a href="/todo/<%= task['id'] %>">View</a></div>
  </div>
<% end %>
</div>
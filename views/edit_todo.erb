<form action = "/todos/<%=@todo['id']%>" method = "post" class = "pure-form pure-form-stacked">
	<input type = "text" name = "task" value = "<%=@todo["task"]%>"><br>
	<input type = "text" name = "details" value = "<%=@todo["details"]%>"><br>
	<input type = "date" name = "due" value = "<%=@todo["due"]%>"><br>
	<label for="urgent">
		<input type = "checkbox" name = "urgent"> Urgent
	</label><br>
	<select name = "person_id">
		<%@people.each do |person|%>
			<option value = "<%=person["id"]%>" selected = "<%=@current_person['name']%>">
				<%=person["name"] %>
			</option>
		<%end%>
	</select><br>
	<select name = "movie_id">
		<%@movies.each do |movie|%>
			<option value = "<%=movie["id"]%>" selected = "<%=@current_person['name']%>">
				<%=movie["title"] %>
			</option>
		<%end%>
	</select><br>
	<button> Save Edits </button>
</form>

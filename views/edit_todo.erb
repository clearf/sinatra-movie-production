<form action = "/todos/<%=@todo['id']%>" method = "post">
	<input type = "text" name = "task" value = "<%=@todo["task"]%>"><br>
	<input type = "text" name = "details" value = "<%=@todo["details"]%>"><br>
	<input type = "text" name = "due" value = "<%=@todo["due"]%>"><br>
	<label for="urgent">
		<input type = "checkbox" name = "urgent"> Urgent
	</label><br>
	<select name = "person">
		<%@people.each do |person|%>
			<option value = "<%=person["id"]%>">
				<%=person["name"] %>
			</option>
		<%end%>
	</select><br>
	<select name = "movie">
		<%@movies.each do |movie|%>
			<option value = "<%=movie["id"]%>">
				<%=movie["title"] %>
			</option>
		<%end%>
	</select><br>
	<button> Save Edits </button>
</form>

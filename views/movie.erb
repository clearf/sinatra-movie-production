<div>
<% @movie.each do |movie| %>
  <form action=/edit_movie/<%= movie['id'] %> method="post">
    Title: <br/><input type="text" name="title" value="<%= movie['title'] %>"><br/>
    Release Date: <input type="text" name="release_date" value="<%= movie['release_date'] %>"><br/>
    Director: <br/><select name="director">
    <% @people.each do |person| %>
      <option value="<%= @director['id'] %>">
        <%= person['name'] %>
      </option>
      <% end %>
    </select>
    <br/><br/>

    <button>Update</button>
  </form><br/><br/>
  <form action="/delete/movies/<%= movie['id'] %>" method="post">
    <button>Delete</button>
  </form>
<% end %>
<br/>
<br/>
<a href="/movies">Back to Movies</a>
</div>
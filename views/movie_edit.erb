<div class="wrapper well form">
  <form action="/movie/<%= @movie['id'] %>" method="post">
    <p>Movie:</p> <input type="text" name="name" value="<%= @movie['name'] %>" autofocus>
    <p>Release Date:</p> <input type="text" name="releasedate" value="<%= @movie['releasedate'] %>">
    <p>Director:</p> <input type="text" name="director" value="<%= @movie['director'] %>">
    <p>Image:</p> <input type="text" name="image" value="<%= @movie['image'] %>"><br>
    <button class="btn btn-primary">Update</button>
  </form>
</div>
<form action="/movie/<%= @movie['id'] %>" method="post">
  <input type="text" name="name" value="<%= @movie['name'] %>" autofocus>
  <input type="text" name="releasedate" value="<%= @movie['releasedate'] %>">
  <input type="text" name="director" value="<%= @movie['director'] %>">
  <input type="text" name="image" value="<%= @movie['image'] %>">
  <button>Create New Movie</button>
</form>
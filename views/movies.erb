<h3>Films You're Working On</h3>
  <% @movies.each do |movie| %>
    <%= movie %><br>
  <% end %>

<h3>Add a film</h3>
<form action="/new_movie" method="post">
<ul>
  <li>Title: <input type="text" name="title"></li>
  <li>Director:
    <select name="director_id">
      <% @people.each do |person| %>
        <option name="director_id" value="<%= person['id'] %>">
        <%= person['name'] %>
      <% end %>
    </select></li>
  <li>Release year: <input type="text" name="year"></li>
  <li>Image URL: <input type="text" name="image"></li>
  <button>Add</button>
</ul>
</form>

<a href="/">Back to home page</a>
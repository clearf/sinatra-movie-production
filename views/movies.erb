<div class="row-fluid wrapper well">
  <% @movies.each do |movie| %>
      <div class="movielist">
        <div class="movies_image">
          <a href="/movie/<%= movie['id'] %>"><img src="<%= movie['image'] %>" /></a>
        </div>
        <div class="movies_name">
          <h3 class="movies_title"><a href="/movie/<%= movie['id'] %>"><%= movie['name'] %></a></h3>
          <p><%= movie['director'] %></p>
          <p><%= movie['releasedate'] %></p>
        </div>
      </div>
  <% end %>
</div>